# ============================================================================
# AWS Budgets Configuration
# ============================================================================
# Required IAM: budgets:CreateBudget, budgets:ModifyBudget
# ============================================================================

variable "budget_limit" {
  default = 500  # Monthly budget in USD
}

variable "notification_email" {
  default = "REPLACE_ME_EMAIL"
}

resource "aws_budgets_budget" "monthly" {
  name         = "claude-proxy-monthly"
  budget_type  = "COST"
  limit_amount = var.budget_limit
  limit_unit   = "USD"
  time_unit    = "MONTHLY"

  cost_filters = {
    TagKeyValue = ["user:project$claude-proxy"]
  }

  notification {
    comparison_operator        = "GREATER_THAN"
    threshold                  = 50
    threshold_type            = "PERCENTAGE"
    notification_type         = "ACTUAL"
    subscriber_email_addresses = [var.notification_email]
  }

  notification {
    comparison_operator        = "GREATER_THAN"
    threshold                  = 80
    threshold_type            = "PERCENTAGE"
    notification_type         = "ACTUAL"
    subscriber_email_addresses = [var.notification_email]
  }

  notification {
    comparison_operator        = "GREATER_THAN"
    threshold                  = 100
    threshold_type            = "PERCENTAGE"
    notification_type         = "FORECASTED"
    subscriber_email_addresses = [var.notification_email]
  }
}

# SNS Topic for Budget Alerts
resource "aws_sns_topic" "budget_alerts" {
  name = "claude-proxy-budget-alerts"
}
