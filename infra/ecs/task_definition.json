{
    "family": "claude-proxy-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::REPLACE_ME_ACCOUNT_ID:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::REPLACE_ME_ACCOUNT_ID:role/claudeProxyTaskRole",
    "containerDefinitions": [
        {
            "name": "claude-proxy-app",
            "image": "REPLACE_ME_IMAGE_URI",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "ENVIRONMENT",
                    "value": "production"
                },
                {
                    "name": "AWS_SECRETS_MANAGER_ENABLED",
                    "value": "true"
                },
                {
                    "name": "AWS_SECRETS_NAME",
                    "value": "REPLACE_ME_SECRET_NAME"
                },
                {
                    "name": "LOG_LEVEL",
                    "value": "INFO"
                }
            ],
            "secrets": [
                {
                    "name": "ANTHROPIC_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:REPLACE_ME_REGION:REPLACE_ME_ACCOUNT_ID:secret:REPLACE_ME_SECRET_NAME:ANTHROPIC_API_KEY::"
                },
                {
                    "name": "SUPABASE_URL",
                    "valueFrom": "arn:aws:secretsmanager:REPLACE_ME_REGION:REPLACE_ME_ACCOUNT_ID:secret:REPLACE_ME_SECRET_NAME:SUPABASE_URL::"
                },
                {
                    "name": "SUPABASE_KEY",
                    "valueFrom": "arn:aws:secretsmanager:REPLACE_ME_REGION:REPLACE_ME_ACCOUNT_ID:secret:REPLACE_ME_SECRET_NAME:SUPABASE_KEY::"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/claude-proxy",
                    "awslogs-region": "REPLACE_ME_REGION",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8000/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ]
}