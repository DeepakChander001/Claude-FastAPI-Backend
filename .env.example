# ------------------------------------------------------------------------
# AWS CONFIGURATION (Production Only)
# ------------------------------------------------------------------------
# Set to 'true' to load secrets from AWS Secrets Manager
AWS_SECRETS_MANAGER_ENABLED=false
AWS_SECRETS_NAME=my-app-secrets-prod

# ------------------------------------------------------------------------
# MONITORING & OBSERVABILITY
# ------------------------------------------------------------------------
ENABLE_METRICS=true
ENABLE_TRACING=false
# Options: otlp, jaeger, none
OTEL_EXPORTER=none
OTEL_EXPORTER_ENDPOINT=http://localhost:4317

# ------------------------------------------------------------------------
# SECURITY
# ------------------------------------------------------------------------
# api_key | jwt | none
AUTH_MODE=api_key
ALLOWED_API_KEYS=REPLACE_ME_KEY1,REPLACE_ME_KEY2
JWT_SECRET=REPLACE_ME_SECRET
RATE_LIMIT_PER_MINUTE=60
AUDIT_LOG_PATH=logs/audit.log

# Observability
ENABLE_TRACING=false
LOG_JSON=true
TRACE_SAMPLING_RATE=1.0

# Security Hardening
CSP_REPORT_ONLY=true
HSTS_MAX_AGE=31536000
SEC_SCAN_FAIL_ON_HIGH=false

# Deployment
AWS_REGION=REPLACE_ME_REGION
ECR_REPO=REPLACE_ME_ACCOUNT.dkr.ecr.REPLACE_ME_REGION.amazonaws.com/claude-proxy
CLUSTER_NAME=claude-proxy
SERVICE_NAME_API=api-service
SERVICE_NAME_WORKER=worker-service
ALB_DNS=REPLACE_ME_ALB_DNS
SECRETS_NAME=claude-proxy-secrets
CONFIRM=false

# Load Testing
LOAD_ENGINE=k6
DEFAULT_RPS=50
SOAK_DURATION=2h