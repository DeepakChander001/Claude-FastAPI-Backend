CLAUDE_SESSION_KEY=sessionKey=sk-ant-sid01-xxxxx...

# Client Mode
# Set to 'true' to use a mock client (no API cost, for testing)
# Set to 'false' to use the real Anthropic API
USE_MOCK_CLIENT=false

# Default Model
DEFAULT_MODEL=claude-3.5-sonnet-20240620

